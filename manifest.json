{
    "manifest_version": 3,
    "name": "Text Simplifier",
    "version": "1.0",
    "description": "Simplify highlighted text using the Summarizer API.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  